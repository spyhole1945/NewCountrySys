/* pages/index/index.wxss */

.welcome-banner {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
  margin-bottom: 30rpx;
}

.banner-title {
  display: block;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.banner-subtitle {
  display: block;
  font-size: 16px;
  opacity: 0.9;
}

.feature-cards {
  padding: 0 30rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  min-height: 80px;
}

.card-icon {
  font-size: 48px;
  margin-right: 30rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 20px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 5rpx;
}

.card-desc {
  font-size: 14px;
  color: var(--text-secondary);
}

.card-arrow {
  font-size: 24px;
  color: var(--primary-color);
}

.notice-section {
  margin: 50rpx 30rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.notice-list {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.notice-item {
  padding: 30rpx;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-title {
  font-size: 16px;
  color: var(--text-primary);
}

.notice-time {
  font-size: 14px;
  color: var(--text-secondary);
}
