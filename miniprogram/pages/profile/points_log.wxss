.points-log-container {
  height: 100vh;
  background-color: #f5f5f5;
}

.log-list {
  height: 100%;
  padding: 20rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 60rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #e0e0e0;
}

.log-item {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-dot {
  position: absolute;
  left: -48rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #4CAF50;
}

.log-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.log-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.points {
  font-size: 32rpx;
  font-weight: bold;
}

.points.positive {
  color: #4CAF50;
}

.points.negative {
  color: #FF5722;
}

.log-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.log-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}
