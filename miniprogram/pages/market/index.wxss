.market-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 分类Tab */
.category-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

/* 列表区域 */
.market-list {
  flex: 1;
  padding: 20rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  color: #999;
}

/* 集市卡片 */
.market-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 内容区 */
.item-content {
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

/* 底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price {
  font-size: 36rpx;
  color: #FF5722;
  font-weight: bold;
}

.contact {
  display: flex;
  align-items: center;
  padding: 12rpx 32rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.contact .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
}
