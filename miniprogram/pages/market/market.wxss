/* pages/market/market.wxss */

.placeholder-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 60rpx;
  text-align: center;
}

.placeholder-icon {
  font-size: 120px;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.placeholder-title {
  font-size: 24px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.placeholder-desc {
  font-size: 16px;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.placeholder-tip {
  font-size: 14px;
  color: var(--text-disabled);
  padding: 20rpx 40rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}
