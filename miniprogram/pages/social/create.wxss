.create-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.content-scroll {
  flex: 1;
  padding: 32rpx;
}

/* 文本输入区 */
.text-section {
  position: relative;
  margin-bottom: 40rpx;
}

.content-input {
  width: 100%;
  min-height: 300rpx;
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

.count {
  position: absolute;
  right: 0;
  bottom: -40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传区 */
.image-section {
  margin-top: 60rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.preview-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0,0,0,0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
}

.upload-btn {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
}

.tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 底部按钮 */
.footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #fff;
  font-weight: bold;
}

.submit-btn[disabled] {
  background: #ccc;
}
