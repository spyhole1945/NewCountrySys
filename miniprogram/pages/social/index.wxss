.social-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.feed-list {
  flex: 1;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 动态卡片 */
.post-item {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 30rpx;
  color: #576B95;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 内容 */
.post-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

/* 九宫格图片 */
.post-images {
  display: grid;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.post-images.single {
  grid-template-columns: 1fr;
}

.post-images.single .post-image {
  max-height: 600rpx;
  width: 100%;
}

.post-images.four {
  grid-template-columns: repeat(2, 1fr);
}

.post-images.grid {
  grid-template-columns: repeat(3, 1fr);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.post-images.single .post-image {
  height: auto;
}

/* 互动按钮 */
.post-actions {
  display: flex;
  gap: 60rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.action-text.active {
  color: #FF5722;
}

/* 评论区 */
.comments {
  background-color: #f7f7f7;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.comment-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-user {
  color: #576B95;
  font-weight: bold;
}

.comment-text {
  color: #333;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  width: 56rpx;
  height: 56rpx;
}
