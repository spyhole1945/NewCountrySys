/* pages/report/report.wxss */

.page-container {
  padding-bottom: 40rpx;
}

/* ========== 页面标题 ========== */
.page-title {
  padding: 40rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  color: white;
  margin-bottom: 30rpx;
}

.page-title text {
  display: block;
  color: white;
}

/* ========== 表单容器 ========== */
.form-container {
  padding: 0 30rpx;
}

/* ========== 选择器样式 ========== */
.picker-wrapper {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 44px;
  padding: 15rpx 20rpx;
  border: 2px solid var(--border-color);
  border-radius: 8rpx;
  background-color: var(--white);
  font-size: 16px;
}

.picker-arrow {
  color: var(--text-secondary);
  font-size: 14px;
}

/* ========== 图片上传 ========== */
.image-upload-container {
  margin-top: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
}

.image-add-btn {
  width: 200rpx;
  height: 200rpx;
  border: 3px dashed var(--primary-color);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.add-icon {
  font-size: 60px;
  color: var(--primary-color);
  line-height: 1;
}

.add-text {
  font-size: 14px;
  color: var(--primary-color);
  margin-top: 10rpx;
}

.image-tip {
  margin-top: 15rpx;
  text-align: right;
}

/* ========== 语音录入 ========== */
.voice-container {
  margin-top: 15rpx;
}

.voice-btn {
  width: 100%;
  min-height: 100px;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
}

.voice-btn::after {
  border: none;
}

.voice-btn.recording {
  background: linear-gradient(135deg, #FF5722 0%, #FF7043 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 87, 34, 0.3);
  transform: scale(0.98);
}

.voice-icon {
  font-size: 48px;
  margin-bottom: 10rpx;
}

.voice-text {
  font-size: 18px;
  font-weight: bold;
}

.voice-tip {
  margin-top: 15rpx;
  text-align: center;
}

/* ========== 位置选择 ========== */
.location-container {
  margin-top: 15rpx;
  padding: 20rpx;
  border: 2px solid var(--border-color);
  border-radius: 8rpx;
  background-color: var(--white);
}

.location-display {
  display: flex;
  align-items: center;
  min-height: 44px;
}

.location-icon {
  font-size: 24px;
  margin-right: 15rpx;
}

.location-detail {
  margin-top: 10rpx;
  padding-left: 50rpx;
}

/* ========== 文字描述 ========== */
.form-textarea {
  line-height: 1.6;
}

.placeholder-text {
  color: var(--text-disabled);
}

.char-count {
  margin-top: 10rpx;
  text-align: right;
}

/* ========== 提交按钮 ========== */
.submit-container {
  margin-top: 50rpx;
}

.submit-btn {
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

/* ========== 温馨提示 ========== */
.tips-container {
  margin: 50rpx 30rpx 0;
  padding: 30rpx;
  background-color: #FFF9E6;
  border-radius: 12rpx;
  border-left: 4px solid var(--accent-color);
}

.tips-title {
  margin-bottom: 20rpx;
}

.tips-content text {
  display: block;
  line-height: 2;
  font-size: 14px;
}
