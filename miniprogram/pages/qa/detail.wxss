/* pages/qa/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.question-card {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.q-header {
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-meta {
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.q-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.q-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.q-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.answers-section {
  background-color: white;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4CAF50;
}

.answer-item {
  border-bottom: 1px solid #eee;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.answer-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.accepted-tag {
  background-color: #e8f5e9;
  color: #4CAF50;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.like-count {
  font-size: 24rpx;
  color: #999;
}

.answer-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.answer-time {
  font-size: 24rpx;
  color: #999;
}

.footer-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.footer-input input {
  flex: 1;
  background-color: #f5f5f5;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0;
}

.send-btn[disabled] {
  background-color: #ccc;
  color: white;
}
