/* pages/qa/create.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.input {
  font-size: 28rpx;
  height: 80rpx;
  border-bottom: 1px solid #eee;
}

.textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: rgba(0,0,0,0.5);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 35rpx;
  font-size: 30rpx;
}

.add-btn {
  width: 160rpx;
  height: 160rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plus {
  font-size: 60rpx;
  color: #999;
  font-weight: 100;
}

.submit-btn-wrapper {
  margin-top: 50rpx;
}

.submit-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
}

.submit-btn[disabled] {
  background-color: #ccc;
  color: white;
}
